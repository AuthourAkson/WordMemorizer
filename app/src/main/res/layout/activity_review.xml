<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    android:id="@+id/review_main_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ratingGroupContainer"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/wordText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        tools:text="Word" />

                    <TextView
                        android:id="@+id/ipaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"
                        tools:text="/wɜːrd/" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPlayPronunciation"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔊 播放发音"
                        android:textColor="@color/purple_500"
                        android:layout_marginTop="8dp"
                        app:icon="@drawable/ic_play_audio"  app:iconTint="@color/purple_500" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/hintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击查看释义和例句"
                        android:textSize="18sp"
                        android:textColor="#666666"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/definitionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        tools:text="释义：一个单词的含义。" />

                    <TextView
                        android:id="@+id/exampleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="sans-serif-light"
                        tools:text="例句：这是一个例句来演示单词用法。" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/semanticHintText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击展开语义图谱"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/semanticMapContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/semanticLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/synonymsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="近义词："
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/rootText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="词根 / 词性："
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/antonymsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="反义词："
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/selectedWordDefinition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textStyle="italic"
                            android:textColor="#666666"
                            android:textSize="15sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonAddToReview"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加入今日复习"
                            android:visibility="gone"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/purple_500"
                            app:strokeColor="@color/purple_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/semanticResultContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ratingGroupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <RadioGroup
            android:id="@+id/ratingGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center">

            <RadioButton
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_1"
                android:layout_marginEnd="8dp" />

            <RadioButton
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_2"
                android:layout_marginEnd="8dp" />

            <RadioButton
                android:id="@+id/score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_3"
                android:layout_marginEnd="8dp" />

            <RadioButton
                android:id="@+id/score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_4"
                android:layout_marginEnd="8dp" />

            <RadioButton
                android:id="@+id/score5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_5" />
        </RadioGroup>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNext"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/next_word"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>